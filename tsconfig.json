{
  "extends": "@total-typescript/tsconfig/bundler/no-dom/app",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node"],
    "noEmit": true,
    "incremental": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*.ts",
    "bin/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
